<Window x:Class="NewTrackerforMike.View.MedDocView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:NewTrackerforMike.ViewModel"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        DataContext="{Binding MedDocVM, Source={StaticResource Locator}}" 
        Background="{DynamicResource WindowBackgroundColor}" Foreground="{DynamicResource LabelTextColor}" Width="716" Height="988" Icon="MainIcon.png">

    <Window.Resources>
        <vm:ViewModelLocator x:Key="vmLocator" />
    </Window.Resources>

    <Grid>
        <ScrollViewer Margin="0,0,10,10">
            <Image x:Name="imagebox" HorizontalAlignment="Center" Height="937" VerticalAlignment="Center" Width="698" Source="/NewTrackerforMike;component/DocFiles/Meloxicam-1.jpg" ScrollViewer.CanContentScroll="True" Stretch="UniformToFill"/>
        </ScrollViewer>
    </Grid>
</Window>
